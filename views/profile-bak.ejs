					// block of code here
					//
					//###

					$.getJSON('http://localhost:30000/account/profile/store/search', {q:value}, function(result){
						var doc = result;
						if(doc && doc.found){
							// remove spinner text
							errorSelector.text('URL already in use, not available');
						}else{
							errorSelector.text('');
						}
