	<script>
		$(document).ready(function(){ 
			// $(".changecolor").switchstylesheet( { seperator:"color"} );
			$('.show-theme-options').click(function(){
				$(this).parent().toggleClass('open');
				return false;
			});

			// hide sign-up form
			$('#sign-up-form').hide();
			
			
			minfroute('signup', null, function(){
				// e.preventDefault();
				$('#sign-in-form').hide();
				$('#sign-up-form').show();
				$('#breadcrumblnk').text('Sign up');
				viewport.scrollIntoView(true);
			});

			minfroute('signin', null, function(){
				// e.preventDefault();
				$('#sign-up-form').hide();
				$('#sign-in-form').show();
				$('#breadcrumblnk').text('Sign in')
				viewport.scrollIntoView(true);
			});
			var viewport = document.getElementById('view-port');
			viewport.scrollIntoView(true);
		});

		$(window).bind("load", function() {
		   $('.show-theme-options').delay(2000).trigger('click');
		});
	</script>
